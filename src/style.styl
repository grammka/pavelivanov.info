@import "./styl"

@import "partials/hero"


.center
  max-width: 800px
  margin 0 auto
  padding 50px 15px 100px


.title
  margin 50px 0 26px
  font-size: 32px
  color #6b48bd
  &:first-child
    margin-top: 0

.content
  line-height: 24px
  font-size: 16px


.tags-container
  margin-top: 10px
  &:first-child
    margin-top: 0

.tags
  margin: -10px 0 0 -10px
  font-size: 0

.tag
  min-width: 60px
  line-height: 28px
  background-color: #d2ddde
  padding 0 10px
  margin: 10px 0 0 10px
  cursor: default
  font-size: 14px
  text-align: center
  font-weight: 600
  color #607273
  no-select()
  display-inline-block()
  &.html
    background-color: #ff6962
    color #fff
  &.css
    background-color: #9671ce
    color #fff
  &.js
    background-color: #ffd715
    color #6b4906


.name
  font-size: 30px

.lifestyle
  font-size: 20px
