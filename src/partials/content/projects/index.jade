-
  items = [
    {
      title: 'Spin One Div',
      slug: 'spinonediv',
      url: 'http://spinonediv.ru',
      desc: 'Single Element pure CSS Spinners & Loaders',
      logoExt: 'jpg',
      logoSize: 'auto 80%',
    },
    {
      title: 'Dribbbles',
      slug: 'dribbbles',
      url: 'http://dribbbles.ru',
      desc: 'Markup of Dribbble projects',
      logoSize: 'auto 80%',
    },
    {
      title: 'Redaction',
      slug: 'redaction',
      url: 'https://github.com/pavelivanov/redaction',
      desc: 'Simple actions creator without string constants',
      logoSize: 'auto 80%',
    },
    {
      title: 'React Notification',
      slug: 'react-notify-me',
      url: 'https://github.com/pavelivanov/react-notify-me',
      desc: 'React component for notifications',
    },
    {
      title: 'Quadratic Photo Mosaic',
      slug: 'quadratic-photomosaic',
      url: 'https://github.com/pavelivanov/quadratic-photomosaic',
      desc: 'Like FB photo mosaic',
    },
    {
      title: 'Cover Editor',
      slug: 'cover-editor',
      url: 'https://github.com/pavelivanov/cover-editor',
      logoExt: 'jpg',
      logoSize: 'auto 70%',
      desc: 'Like FB cover editor',
    },
  ]

.info-title Projects
.info-content
  .project-cards
    for item in items
      .project-card-container
        a.project-card(href="#{item.url}" target="_blank")
          .project-card__photo(style="background-image: url(./images/projects/#{item.slug}.#{item.logoExt || 'png'}); #{item.logoSize ? ('background-size: ' + item.logoSize) : ''}")
          .project-card__content
            .project-card__title #{item.title}
            .project-card__desc #{item.desc}
