@import 'projects'


.content
  padding 50px 0 70px


.info-title
  margin 40px 0 18px
  font-size: 38px
  color #8a57d8 // #bdc7c7
  &:first-child
    margin-top: 0

.info-content
  line-height: 24px
  font-size: 16px


.tags-container
  margin-top: 10px
  &:first-child
    margin-top: 0

.tags
  margin: -10px 0 0 -10px
  font-size: 0

.tag
  min-width: 60px
  line-height: 32px
  background-color: #d2ddde
  padding 0 12px
  margin: 10px 0 0 10px
  cursor: default
  font-size: 14px
  text-align: center
  font-weight: 600
  color #607273
  border-radius 3px
  no-select()
  display-inline-block()
  &.html
    background-color: #ff6962
    color #fff
  &.css
    background-color: #9671ce
    color #fff
  &.js
    background-color: #ffd715
    color #6b4906


@media (max-width: 500px)
  .content
    padding 30px 15px 50px
  .info-title
    margin 25px 0 15px
    font-size: 32px
