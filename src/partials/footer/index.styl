.footer
  background-color: #332b48
  padding 30px 0 50px

.footer__title
  text-align: center
  font-size: 38px
  color #fff

.footer__items
  margin-top: 30px
  text-align: center
  font-size: 0

.footer__item
  height: 58px
  min-width: 58px
  margin-left: 16px
  cursor: pointer
  display-inline-block()
  &:first-child
    margin-left: 0
  &.letter
  &.facebook
    background-image: url(./images/footer/social-icons.png)
    background-size 100% auto
    background-repeat: no-repeat
  &.letter
    background-position: 0 -58px
  &.facebook
    background-position: 0 0

.footer__social-container
  margin-top: 20px
  text-align: center

.footer__social
  display-inline-block()
