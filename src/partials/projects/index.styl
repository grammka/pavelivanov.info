.project-cards
  display: flex
  flex: 0 1 auto
  flex-direction: row
  flex-wrap: wrap
  margin -10px -10px 0

.project-card-container
  display: flex
  flex: 0 0 auto
  flex-basis: 33.333%
  max-width: 33.333%

.project-card
  width: 100%
  display: flex
  flex-direction: column
  background-color: #fff
  border 1px solid #cedbe2
  margin: 20px 10px 0
  overflow: hidden
  text-decoration: none !important
  color #000 !important
  border-radius 3px
  //box-shadow: #000 0 0 1px inset
  transition all 0.12s linear
  &:hover
    border-color darken(#cedbe2, 12%)

.project-card__photo
  background-color: #e6f2f9
  background-size auto 90%
  background-position: center
  background-repeat: no-repeat
  border-bottom 1px solid #c2ccd2
  padding-bottom: 55%
  //box-shadow rgba(0, 0, 0, 0.13) 0 0 0 1px inset
  //border-radius top 3px

.project-card__content
  display: flex
  flex-direction: column
  flex: 1 0 auto
  padding 15px

.project-card__title
  margin-bottom: 10px
  font-size: 18px

.project-card__desc
  line-height: 16px
  font-size: 12px


@media (min-width: 501px) and (max-width: 800px)
  .project-card-container
    flex-basis: 50%
    max-width: 50%
  .project-card__title
    font-size: 20px
  .project-card__desc
    font-size: 14px

@media (max-width: 500px)
  .project-card-container
    flex-basis: 100%
    max-width: 100%
  .project-card__title
    font-size: 24px
  .project-card__desc
    font-size: 16px
