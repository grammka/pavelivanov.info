$bg-color       = #8c64ec
$name-color     = #fff


.hero
  background-color: $bg-color
  padding: 50px 0 60px
  text-align: center

.logo
  size 160px
  line-height: 130px
  background-color: rgba(#000, 0.12)
  margin: 0 auto
  cursor: default
  text-align: center
  font-size: 160px
  font-family: "Times New Roman"
  font-weight: 600
  color #fff
  text-shadow rgba(#000, 0.4) 0 1px
  border-radius top 6px
  no-select()

.in-dev
  width: 160px
  line-height: 24px
  background-color: #ffe000
  border-top: 1px solid #6948b7
  padding 0 6px
  margin 0 auto
  z-index: 10
  cursor: default
  text-transform: uppercase
  font-family: "Noto Sans"
  font-weight: 600
  font-size: 11px
  color #000
  text-shadow: none
  border-radius bottom 6px



.about
  line-height: 30px
  margin-top: 50px
  font-size: 17px
  color #fff
  a
    position: relative
    text-decoration: none
    font-weight: 600
    font-size: 18px
    color $name-color
    display-inline-block()
    &:after
      content ''
      display: block
      width: 100%
      height: 1px
      background-color: $name-color
      absolute bottom 1px left 0
      transition all 0.08s linear
    &:hover
    	&:after
        opacity: 0.3

.links
  margin-top: 40px


.button-container
  margin-left 10px
  position: relative
  z-index: 10
  display-inline-block()
  &:first-child
    margin-left: 0
  &:hover
    .button
      box-shadow rgba(#000, 0.12) 0 0 0 3px

.button
  min-width: 60px
  line-height: 36px
  background-color: #fff
  padding 0 14px
  cursor: pointer
  font-size: 14px
  text-decoration: none !important
  text-align: center
  font-weight: 600
  color #6b48bd !important
  border-radius 3px
  transition all 0.08s linear
  no-select()
  display-inline-block()


@media (max-width: 500px)
  .media-text
    display: block
