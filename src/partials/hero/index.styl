$bg-color       = #8c64ec
$name-color     = #fff


.hero
  background-color: $bg-color
  padding: 60px 0 80px
  text-align: center

.logo
  size 160px
  line-height: 160px
  background-color: rgba(#000, 0.12)
  margin: 0 auto
  cursor: default
  text-align: center
  font-size: 50px
  font-weight: 600
  color #fff
  text-shadow rgba(#000, 0.4) 0 1px
  border-radius 50%
  no-select()

.about
  line-height: 30px
  margin-top: 50px
  font-size: 17px
  color #fff
  a
    position: relative
    text-decoration: none
    font-weight: 600
    font-size: 18px
    color $name-color
    display-inline-block()
    &:after
      content ''
      display: block
      width: 100%
      height: 1px
      background-color: $name-color
      absolute bottom 1px left 0
      transition all 0.08s linear
    &:hover
    	&:after
        opacity: 0.3

.links
  margin-top: 40px


.button-container
  margin-left 10px
  position: relative
  z-index: 10
  display-inline-block()
  &:after
    content ''
    size 100%
    display: block
    background-color: rgba(#000, 0.3)
    absolute bottom 0 left 0
    z-index: -1
    transition all 0.08s linear
  &:first-child
    margin-left: 0
  &:hover
    &:after
    	bottom -2px
    .button
      transform scale(1.03)

.button
  min-width: 60px
  line-height: 36px
  background-color: #fff
  padding 0 14px
  cursor: pointer
  font-size: 14px
  text-decoration: none !important
  text-align: center
  font-weight: 600
  color #000 !important
  transition all 0.08s linear
  no-select()
  display-inline-block()
